<%- include("../partials/header") %>

<h1 style="text-align:center;">
	
	Edit <%= campgrounds.name %> 
	
</h1>
<div class="container" style="margin:25px auto; width:30%">
	

<form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="post">
	
	<div class="form-group">
			<input class="form-control" type="text" name=campground[name] value="<%=campgrounds.name%>" >

	</div>
	
	 <div class="form-group">
		 
		 <input class="form-control" type="number" name="campground[price]" value="<%= campgrounds.price %> ">
             
	</div>
	
	<div class="form-group">
			<input class="form-control" type="text" name=campground[img] value="<%=campgrounds.img%>">

	</div>
	
	
	<div class="form-group">
			<input class="form-control" type="text" name=campground[desc] value="<%=campgrounds.desc%>">

	</div>
	
	<div class="form-group">
		   <input type="submit" class="btn btn-primary btn-block"> 

	</div>
</form>

<a href="/campgrounds">Go Back</a>
</div>
<%- include("../partials/footer") %>